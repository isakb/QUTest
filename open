#!/bin/bash
# Run tests with QUTest.

SERVER_ONLY=0
if [[ "$1" == "--server" ]]; then
    SERVER_ONLY=1
    shift
fi
PORT=${1:-8765}
WWWROOT=`cd $2; pwd`
WWWPATH=$3
FULL_URL=http://127.0.0.1:${PORT}${WWWPATH}
SERVER_COMMAND=
shift
shift
shift

cd `dirname $0`
LOGROOT=`pwd`/logs
if [[ "$1" == "--browser" ]]; then
    (
        sleep 1
        echo "Opening: $FULL_URL"
        if [ "`uname -s`" == "Darwin" ] ; then
            open $FULL_URL
        else
            xdg-open $FULL_URL &> /dev/null
        fi
    ) &

    node server $PORT $WWWROOT
else
    SERVER_COMMAND="node test/server $PORT $WWWROOT"
    if [[ "$1" == "--coverage" ]]; then
        shift
        PORT2=$(( PORT + 1 ))
        SERVER_COMMAND="node lib/node-coverage/server -p $PORT -a $PORT2 -d $WWWROOT -r $LOGROOT --condition --function"
    fi

    if [[ "$SERVER_ONLY" -eq 1 ]]; then
        $SERVER_COMMAND
    else
        $SERVER_COMMAND &
        trap "kill $!" EXIT
        ./run --working-directory=$WWWROOT $FULL_URL
    fi
fi
